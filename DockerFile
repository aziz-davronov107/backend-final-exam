FROM node:22-alpine AS builder

WORKDIR /app

COPY package*.json ./

# üß† Nest CLI dev dependency bo'lishi mumkin, shuning uchun production emas
RUN npm install

COPY prisma ./prisma
COPY . .

RUN npx prisma generate
RUN npm run build

FROM node:22-alpine

WORKDIR /app

COPY package*.json ./
RUN npm install --production

# ‚ö°Ô∏è Build qilingan kodlarni builder'dan olish
COPY --from=builder /app/dist ./dist
COPY --from=builder /app/prisma ./prisma
COPY --from=builder /app/node_modules/.prisma ./node_modules/.prisma

EXPOSE 1709

CMD ["node", "dist/main"]
